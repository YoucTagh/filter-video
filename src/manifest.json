{
  "manifest_version": 3,
  "name": "URL Logger & Video Blur",
  "version": "1.0",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup/popup.html"
  }
}